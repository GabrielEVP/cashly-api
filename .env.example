# =================================
# CASHLY API - Environment Variables
# =================================

# Docker Compose Profiles Configuration
# Available profiles: app, database, test
# Container profiles to use (customize based on needs)
DOCKER_PROFILES=app,database
APP_PROFILE=app
DATABASE_PROFILE=database
TEST_PROFILE=test

# Database Configuration
DB_HOST=mysql
DB_PORT=3306
DB_NAME=mydatabase
DB_USER=myuser
DB_PASSWORD=secret
DB_ROOT_PASSWORD=verysecret

# Database URL (constructed from above variables)
DATABASE_URL=jdbc:mysql://${DB_HOST}:${DB_PORT}/${DB_NAME}

# JWT Configuration
JWT_SECRET=defaultSecretKeyThatIsAtLeast256BitsLongForHS256AlgorithmSecurity
JWT_ACCESS_TOKEN_EXPIRATION=900000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# Application Configuration
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080

# Docker Configuration
COMPOSE_PROJECT_NAME=cashly-api

# Development/Production Environment
ENVIRONMENT=dev

# Logging Configuration
LOG_LEVEL=INFO

# API Configuration
API_VERSION=v1
API_BASE_PATH=/api/v1

# Security Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# Test Database Configuration
TEST_DB_HOST=mysql-test
TEST_DB_PORT=3307
TEST_DB_NAME=cashly_test
TEST_DB_USER=testuser
TEST_DB_PASSWORD=testpass
TEST_DB_ROOT_PASSWORD=testroot

# Docker Build Configuration
DOCKER_REGISTRY=
DOCKER_TAG=latest